/* pages/wallet/wallet.wxss */
.wallet-head {
  background-color: #337ab7;
  display: flex;
  padding:1.5rem;
  color: #fff;
  align-items: center;
}
.wallet-title {
  flex: 1;
}
.btn-money {
  border:1px solid #fff;
  color: #337ab7;
  background-color: #fff;
}
.btn-money:first-child {
  background-color: #337ab7;
  color: #fff;
  margin-right: 10rpx;
}
.wallet-nav {
  margin: 40rpx auto;
  width: 60%;
  display: flex;
}
.wallet-nav-btn {
  flex: 1;
  text-align: center;
  background-color: #fff;
  padding: 0.4rem 0;
  border: 1.3px solid #337ab7;
  color: #337ab7; 
}
.wallet-nav-btn:first-child{
  border-radius: 50rpx 0rpx 0rpx 50rpx;
}
.wallet-nav-btn:last-child{
  border-radius: 0rpx 50rpx 50rpx 0rpx;
}
.active {
  background-color: #337ab7;
  color: #fff; 
}
.wallet-list {
  display: flex;
  justify-content: space-between;
}
.hidden {
  display: none;
}